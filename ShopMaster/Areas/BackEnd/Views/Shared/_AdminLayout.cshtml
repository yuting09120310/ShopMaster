<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - 後台管理</title>
    <link href="~/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/admin/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<style>
    .collapse-inner .collapse-item {
        display: flex; /* 使用 Flexbox */
        align-items: center; /* 垂直置中 */
        padding: 0.5rem 1rem; /* 確保間距一致 */
    }

    .collapse-inner .collapse-item i {
        font-size: 1rem; /* 統一 Icon 大小 */
        margin-right: 0.5rem; /* Icon 與文字的間距 */
        width: 1.25rem; /* 固定寬度，讓所有 Icon 對齊 */
        text-align: center; /* 確保 Icon 垂直水平居中 */
    }
</style>

<body id="page-top">

    <div id="wrapper">
        <!-- 側邊選單 -->
        <partial name="_AdminSidebar" />

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- 頂部導覽列 -->
                <partial name="_AdminNavbar" />

                <!-- 內容區 -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <partial name="_AdminFooter" />
        </div>
    </div>

    <script src="~/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/js/sb-admin-2.min.js"></script>

</body>
</html>
