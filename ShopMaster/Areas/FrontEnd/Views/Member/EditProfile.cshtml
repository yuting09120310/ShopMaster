@model ShopMaster.Areas.FrontEnd.ViewModels.EditProfileViewModel

<!-- Start Page Title -->
<div class="page-title-area">
    <div class="container">
        <div class="page-title-content">
            <h2>編輯個人資料</h2>
            <ul>
                <li><a href="/Home/Index">首頁</a></li>
                <li>編輯個人資料</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title -->
<!-- Start Edit Profile Area -->
<section class="edit-profile-area ptb-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="edit-profile-content">
                    <h2>編輯個人資料</h2>

                    <form asp-controller="Member" asp-action="EditProfile" asp-area="frontend" method="post" enctype="multipart/form-data" class="edit-profile-form">
                        <input id="Id" name="Id" value="@Model.Id" hidden />
                        <div class="form-group">
                            <label for="Name">姓名</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
                        </div>

                        <div class="form-group">
                            <label for="Email">電子郵件</label>
                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
                        </div>

                        <div class="form-group">
                            <label for="Phone">電話號碼</label>
                            <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone">
                        </div>

                        <div class="form-group">
                            <label for="Address">地址</label>
                            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
                        </div>

                        <div class="form-group">
                            <label for="Birthday">生日</label>
                            <input type="date" class="form-control" id="Birthday" name="Birthday" value="@Model.Birthday?.ToString("yyyy-MM-dd")">
                        </div>

                        <div class="form-group mb-5">
                            <label for="Avatar">頭像</label>
                            @if (!string.IsNullOrEmpty(Model.Avatar))
                            {
                                <div class="mb-3">
                                    <img src="@Model.Avatar" alt="Avatar" class="img-thumbnail" style="max-width: 150px;">
                                </div>
                            }
                            <input type="file" class="form-control" id="AvatarFile" name="AvatarFile">
                        </div>

                        <button type="submit" class="default-btn">保存變更</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Edit Profile Area -->
