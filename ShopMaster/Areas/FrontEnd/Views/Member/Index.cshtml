@model ShopMaster.Areas.BackEnd.Models.Member
@{
    ViewData["Title"] = "會員中心";
}

<style>


    #orderHistory{
        width: 90px;
        height: 90px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center
    }

    #edit {
        width: 122px;
        height: 122px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center
    }

</style>

<h2>會員中心</h2>

<section class="container my-5" style="padding-top: 120px">
    <div class="  row d-flex text-end fs-4 mb-3"><div class="col ml-auto"><a href="/Member/Logout" style="color: inherit; text-decoration: none;"><i class="bi bi-box-arrow-right  "></i></a></div></div>
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header text-secondary fw-bold " style="background-color:transparent">
                    <i class="fas fa-user"></i> 個人資料
                </div>
                <div class="card-body">
                    <p>姓名: @Model.Name</p>
                    <p>Email: @Model.Email</p>
                    <p>電話: @Model.Phone</p>
                    <a href="@Url.Action("EditProfile", "Member")" class="btn btn-warning text-white fw-bold" id="edit">編輯個人資料</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header  text-secondary fw-bold" style="background-color:transparent">
                    <i class="fas fa-shopping-cart"></i> 訂單
                </div>
                <div class="card-body">
                    <p>查看您的訂單歷史記錄和狀態。</p>
                    <div id="orderHistory" style="text-align: center">
                        <a href="@Url.Action("Orders", "Member")" class="btn btn-warning text-white border  rounded-xl fw-bold" id="orderHistory">查看訂單</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

