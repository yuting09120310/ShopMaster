@model ShopMaster.Areas.BackEnd.Models.Member
@{
    ViewData["Title"] = "會員中心";
}

<h2>會員中心</h2>

<section class="container my-5" style="padding-top: 120px">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-user"></i> 個人資料
                </div>
                <div class="card-body">
                    <p>姓名: @Model.Name</p>
                    <p>Email: @Model.Email</p>
                    <p>電話: @Model.Phone</p>
                    <a href="@Url.Action("EditProfile", "Member")" class="btn btn-primary">編輯個人資料</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-shopping-cart"></i> 訂單
                </div>
                <div class="card-body">
                    <p>查看您的訂單歷史記錄和狀態。</p>
                    <a href="@Url.Action("Orders", "Member")" class="btn btn-success">查看訂單</a>
                </div>
            </div>
        </div>
    </div>
</section>

