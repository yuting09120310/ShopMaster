@model IEnumerable<ShopMaster.Areas.BackEnd.Models.Cart>

<div class="products-cart-content">
    @foreach (var item in Model)
    {
        <div class="products-cart">
            <div class="products-image">
                <a href="#"><img src="@item.Product.MainImage" alt="image"></a>
            </div>

            <div class="products-content">
                <h3><a href="#">@item.Product.Name</a></h3>
                <span>@item.Product.ProductSpecs.FirstOrDefault().SpecText</span>
                <div class="products-price">
                    <span>@item.Quantity</span>
                    <span>x</span>
                    <span class="price">$@item.Product.Price</span>
                </div>
                <a href="#" class="remove-btn" onclick="removeCartItem('@item.Id')"><i class='bx bx-trash'></i></a>
            </div>
        </div>
    }
</div>

<div class="products-cart-subtotal">
    <span>金額試算(不包含折扣)</span>
    <span class="subtotal">$@Model.Sum(item => item.Product.Price * item.Quantity)</span>
</div>

<div class="products-cart-btn">
    <a class="default-btn" asp-action="Checkout" asp-controller="Order" asp-area="FrontEnd">結帳</a>
</div>


<script>
    function removeCartItem(itemId) {
        $.ajax({
            url: '@Url.Action("DelCartPartial", "Cart", new { area = "FrontEnd" })',
            type: 'GET',
            data: { itemNo: itemId },
            success: function (data) {
                $('#cartItemsContainer').html(data);
            },
            error: function (xhr, status, error) {
                console.error('Error removing cart item:', error);
            }
        });
    }
</script>