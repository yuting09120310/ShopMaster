                                <a asp-area="FrontEnd" asp-action="Details" asp-controller="Products" asp-route-id="@item.Id" class="position-relative w-100 h-100">
                                    <img src="@item.MainImage" class="main-image img-fluid w-100 h-100" style="object-fit: cover;" alt="image">
                                    <img src="@item.MainImage" class="hover-image img-fluid w-100 h-100 position-absolute" style="object-fit: cover; top: 0; left: 0;" alt="image">
                                </a>
                            </div>

                            <div class="products-content">
                                <h3><a asp-area="FrontEnd" asp-action="Details" asp-controller="Products" asp-route-id="@item.Id">@item.Name</a></h3>
                                <div class="price">
                                    <span class="new-price">$@item.Price</span>
                                </div>
                                <div class="star-rating">
                                    <i class='bx bxs-star'></i>
                                    <i class='bx bxs-star'></i>
                                    <i class='bx bxs-star'></i>
                                    <i class='bx bxs-star'></i>
                                    <i class='bx bxs-star'></i>
                                </div>
                                <a class="add-to-cart">$@item.Price</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- End Products Area -->