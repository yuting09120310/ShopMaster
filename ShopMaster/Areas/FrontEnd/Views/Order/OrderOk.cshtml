@{
    var id = ViewBag.memberId;
    var orderId = ViewBag.orderId;
}

    <style>


        #checkOrder, #back {
            width: 90px;
            height: 40px;           
            display: flex;
            justify-content: center;
            align-items: center
        }
    </style>
    <div class="container" style="padding-top: 120px">
    <form method="get" action="Details">
        <h4 class="text-center fw-bold text-secondary fs-1 mt-5">謝謝您的訂單 !</h4>
        <input type="hidden" value=@id name="id"/>
        <input type="hidden" value=@orderId name="extraId"/>

        <div class="row">
        
            <div class="d-flex mt-2 justify-content-center" style="border: none;">
                          
                <button type="submit" class="btn fw-bold fs-3 me-5 text-warning" id="checkOrder" style="width:200px; ">查看訂單</button>
                

            </div>       
        
        
        </div>
        <div class="row ">
            <div class="col d-flex mt-2 justify-content-center">
               
                <a href="@Url.Action("Index", "Home", new{area = "FrontEnd" })" class="btn  fw-bold ms-5  fs-4" id="back" style="width:122px; color:gray">回首頁。</a>
            </div>
            
           
        </div>

    </form>
    </div>

