@model List<ShopMaster.Areas.FrontEnd.ViewModelsF.Products>


@{
}

<style>
    /* 初始样式 */
    .hover {
        position: relative;
        padding-bottom: 10px;
        color: black;
        border-radius: 10px;
        line-height: 200px;
        transition: transform 0.3s ease, opacity 0.3s ease; /* 添加过渡效果 */
        opacity: 1; /* 默认不透明 */
    }

        /* 悬停时的浮动和半透明效果 */
        .hover:hover {
            transform: translateY(-8px); /* 向上浮动 */
            opacity: 0.7; /* 半透明 */
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); /* 阴影 */
        }

</style>


<div class="container my-5 " style="padding-top: 110px">
    <h2 class="fw-lighter">熱銷商品</h2>
    <div class="row mt-2">

    @foreach (var p in Model)
    {   
        <div class="col-md-3 col-sm-4 col-6 mt-3 mb-2">
                <a href="/Products/Details/@p.Id" class="text-decoration-none" >
                <div class="card hover">
                    <img src=@p.MainImage class="card-img-top" alt="商品1">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>                        
                    </div>
                </div>
            </a>
        </div>
    }
        
        
    </div>
</div>














